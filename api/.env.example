# Настройки базы данных PostgreSQL
DB_USER=your_database_user
DB_HOST=localhost
DB_NAME=your_database_name
DB_PASSWORD=your_database_password
DB_PORT=5432

# JWT секретный ключ для авторизации
# Используйте надёжный случайный ключ (например, сгенерируйте через: openssl rand -base64 32)
JWT_SECRET=your_jwt_secret_key_here

# Порт API сервера
PORT=4000

# Режим работы приложения (development или production)
NODE_ENV=development

# Настройки Email (SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password
EMAIL_FROM="FOHOW Interactive Board <noreply@fohow.com>"

# URL фронтенда (для ссылок в письмах)
FRONTEND_URL=http://localhost:5173

# Настройки Telegram Bot
# Токен бота можно получить у @BotFather в Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Prodamus - платёжная система
PRODAMUS_SECRET_KEY=your_prodamus_secret_key_here
PRODAMUS_LINK_INDIVIDUAL=https://payform.ru/hqaEqyT/
PRODAMUS_LINK_PREMIUM=https://payform.ru/nkaEqBZ/

# Яндекс.Диск - хранилище файлов
YANDEX_DISK_TOKEN=your_yandex_disk_oauth_token
YANDEX_DISK_BASE_DIR=/fohow-interactive

# Redis - для кеширования и сессий
REDIS_URL=redis://localhost:6379
